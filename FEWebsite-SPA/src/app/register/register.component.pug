form(#registerForm="ngForm", (ngSubmit)="register();")
  h2.text-center.text-primary Sign Up
  hr
  .form-group
    input.form-control([(ngModel)]="model.username" required name='username' type='text' placeholder='Username')
  .form-group
    input.form-control([(ngModel)]="model.password" required name='password' type='password' placeholder='Password')
  .form-group.text-center
    button.btn.btn-success(type='submit') Register
    button.btn.btn-default(type='button', (click)="cancel();") Cancel
    